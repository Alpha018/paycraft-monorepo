    "@nrwl/jest": "16.4.0",
    "@nrwl/linter": "16.4.0",
    "@nrwl/nest": "16.4.0",
    "@nrwl/node": "16.4.0",
    "@nrwl/nx-cloud": "16.0.5",
    "@nrwl/webpack": "16.4.0",
    "@nrwl/workspace": "16.4.0",
    "@nx/jest": "16.4.0",
    "@nx/js": "16.4.0",
    "@nx/nest": "16.4.0",
