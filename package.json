{
  "name": "paycraft-mono-repo",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "core:dev": "npm run core:build && nx serve paycraft-core-service",
    "core:prod": "npx prisma migrate deploy && node dist/apps/paycraft-core-service/main.js",
    "core:build": "nx build paycraft-core-service",
    "core:lint": "nx lint paycraft-core-service",
    "core:test": "nx test paycraft-core-service",
    "core:format": "nx format paycraft-core-service",
    "websocket:dev": "npm run websocket:build && nx serve websocket-app",
    "websocket:prod": "node dist/apps/websocket-app/main.js",
    "websocket:build": "nx build websocket-app",
    "websocket:lint": "nx lint websocket-app",
    "websocket:test": "nx test websocket-app",
    "websocket:format": "nx format websocket-app",
    "rest:dev": "npm run rest:build && nx serve rest-service",
    "rest:prod": "node dist/apps/rest-service/main.js",
    "rest:build": "nx build rest-service",
    "rest:lint": "nx lint rest-service",
    "rest:test": "nx test rest-service",
    "rest:format": "nx format rest-service",
    "grpc:dev": "npm run grpc:build && nx serve grpc-service",
    "grpc:prod": "node dist/apps/grpc-service/main.js",
    "grpc:build": "nx build grpc-service",
    "grpc:lint": "nx lint grpc-service",
    "grpc:test": "nx test grpc-service",
    "grpc:format": "nx format grpc-service",
    "lint": "nx run-many --all --target=lint --parallel",
    "format": "nx affected:lint --fix",
    "test": "nx run-many --all --target=test --parallel",
    "prepare": "husky install",
    "postinstall": "[ -d '.husky' ] && husky install || true",
    "prisma": "prisma generate",
    "prisma:schema": "prisma generate --schema=libs/common/src/assets/prisma/schema.prisma"
  },
  "prisma": {
    "schema": "dist/libs/common/src/assets/prisma/schema.prisma"
  },
  "private": true,
  "dependencies": {
